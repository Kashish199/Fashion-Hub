<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fashionhub">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProfileDetails"></activity>
        <activity android:name=".UpdateProduct" />
        <activity android:name=".PostList" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".AdminRole" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SellerSignup" />
        <activity android:name=".User" />
        <activity android:name=".Home">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".Orders" />
        <activity android:name=".Address" />
        <activity android:name=".OrderSummary" />
        <activity android:name=".ProductDetails" />
        <activity android:name=".AddProduct" />
        <activity android:name=".Signup" />
        <activity android:name=".Cart" />
        <activity android:name=".ThankYou" />
        <activity android:name=".Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>

